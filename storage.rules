rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: admin can upload, everyone can read
    match /profile-pictures/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@secretsanta.app';
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
