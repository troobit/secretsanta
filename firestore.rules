rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if system is locked
    function isLocked() {
      let settingsDoc = get(/databases/$(database)/documents/settings/config);
      return settingsDoc.data.lockInTime != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      let userId = request.auth.token.email.split('@')[0];
      let userDoc = get(/databases/$(database)/documents/users/$(userId));
      return userDoc.data.isAdmin == true;
    }
    
    // Helper function to check if only wishlist is being updated
    function onlyWishlistChanged() {
      let affectedKeys = request.resource.data.diff(resource.data).affectedKeys();
      return affectedKeys.hasOnly(['wishlist']);
    }
    
    // Users collection: authenticated users can read all, write only their own document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.token.email.split('@')[0] == userId;
      allow update: if request.auth != null 
                    && request.auth.token.email.split('@')[0] == userId
                    && (!isLocked() || onlyWishlistChanged());
      allow delete: if false;
    }
    
    // Settings collection: authenticated users can read, admin can write
    match /settings/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
  }
}
